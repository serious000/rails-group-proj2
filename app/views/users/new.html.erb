<div id="container">
	<div id="middle_content">
		<div id="nav">
			<div id="logo">

			</div>
			<div id="nav_head" class="navbar">

			</div>
		</div>
		<div id="middle_nav">
			<h1> Register or Log in </h1>

		</div>
		<div id="content">
			<div id="login">
				<h2> Log in </h2>
					<form action="/sessions" method='post'>
					<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
					<div class="form-group">
					Email:<br> <input type="text" name="email" class="xs-form-control">
					</div>
					<div class="form-group">
					Password:<br> <input type="password" name="password" class="xs-form-control">
					</div>
					<button class="btn-primary btn-md btn-block"> Log In </button>
				</form>
			</div>
			<div id="border">
			</div>

			<div id="register">
				<h2> Register</h2>
				<form action="/users" method='post'>
					<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
					<div class="form-group">
					First Name:<br> <input type="text" name="user[first_name] class="xs-form-control">
					</div>
					<div class="form-group">
					Last Name:<br> <input type="text" name="user[last_name] class="xs-form-control">
					</div>
					<div class="form-group">
					Email:<br> <input type="text" name="user[email] class="xs-form-control">
					</div>
					<div class="form-group">
					Password:<br> <input type="password" name="user[password] class="xs-form-control">
					</div>
					<div class="form-group">
					Confirm Password:<br> <input type="password" name="user[password_confirmation] class="xs-form-control">
					</div>
					<button class="btn-primary btn-md btn-block"> Register </button>

				</form>
			</div>

	</div>
	<% if flash[:errors] %>
	  <p><%= flash[:errors] %></p>
	<% end %>
	</div>

</div>