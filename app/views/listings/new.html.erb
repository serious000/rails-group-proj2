<div id="container">
	<div id="middle_content">
<h1>New Listing</h1>
<div id="forms">
	<div class="form-listings">
	<form action="/listings" method="post">
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
		<div id="locate">
			<h2> Location </h2>
			<div class="form-group">
			Title:<br> <input type="text" name="listing[title]" class="xs-form-control">
			</div>
			<div class="form-group">
			Description:<br><input type="text" name="listing[description]" class="xs-form-control">
			</div>
			<div class="form-group">
			Address:<br><input type="text" name="listing[street]" class="xs-form-control">
			</div>
			<div class="form-group">
			City:<br><input type="text" name="listing[city]" class="xs-form-control">
			</div>
			<div class="form-group">
			State:<br><select name="listing[state_id]" class="xs-form-control">
				<% @states.each do |s| %>
				<option value="<%=s.id%>"><%=s.name%></option>
				<% end %>
			</select>
			</div>
			<div class="form-group">
			Zip:<br><input type="text" name="listing[zipcode]" class="xs-form-control">
			</div>
		</div>
		<div id="border">
		</div>
		<div id="h_type">
			<h2> Type </h2>
			<div class="form-group">
			Category:<br><select name="listing[category_id]" class="xs-form-control">
				<% @categories.each do |c| %>
				<option value="<%= c.id %>"><%= c.name %></option>
				<% end %>
			</select>
			</div>
			<div class="form-group">
			Type:<br><select name="listing[subcategory_id]" class="xs-form-control">
				<% @subcategories.each do |s| %>
				<option value="<%= s.id %>"><%= s.name %></option>
				<% end %>
			</select>
			</div>
			<div class="form-group">
			Beds:<br><select name="listing[beds]" class="xs-form-control">
				<% @beds.each do |b| %>
					<option value="<%= b.to_i %>"><%= b %></option>
				<% end %>
			</select>
			</div>
			<div class="form-group">
			Baths:<br><select name="listing[baths]" class="xs-form-control">
				<% @baths.each do |b| %>
					<option value="<%= b %>"><%= b %></option>
				<% end %>
			</select>
			</div>
			<div class="form-group">
			Price:<br><input type="number"  name="listing[price]" min="1" step="1" max="10000000" value="1000" class="xs-form-control"/>
			</div><br><br>
			<button class="btn-primary btn-md btn-block"> Publish </button>
		</div>
	</form>
	</div>
</div>
</div>
</div>

