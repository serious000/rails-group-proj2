<h1>Listings#new</h1>
<div class="form-listings">
<p>Find me in app/views/listings/new.html.erb</p>
<form action="/listings" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
	Title: <input type="text" name="listing[title]"><br>
	Description: <input type="text" name="listing[description]"><br>
	Address: <input type="text" name="listing[street]"><br>
	City: <input type="text" name="listing[city]"><br>
	State: <select name="listing[state_id]">
		<% @states.each do |s| %>
		<option value="<%=s.id%>"><%=s.name%></option>
		<% end %>
	</select><br>
	Zip: <input type="text" name="listing[zipcode]"><br>
	Category: <select name="listing[category_id]">
		<% @categories.each do |c| %>
		<option value="<%= c.id %>"><%= c.name %></option>
		<% end %>
	</select><br>
	Type: <select name="listing[subcategory_id]">
		<% @subcategories.each do |s| %>
		<option value="<%= s.id %>"><%= s.name %></option>
		<% end %>
	</select><br>
	Beds: <select name="listing[beds]">
		<% @beds.each do |b| %>
			<option value="<%= b.to_i %>"><%= b %></option>
		<% end %>
	</select><br>
	Baths: <select name="listing[baths]">
		<% @baths.each do |b| %>
			<option value="<%= b %>"><%= b %></option>
		<% end %>
	</select><br>
	Price: <input type="number"  name="listing[price]" min="1" step="1" max="10000000" value="1000" />
	<input type="submit" value="Create Listing">
</form>
</div>
